<% if params[:guide_id] %>
<div class="event-section">
  <div class="row mb-3 mt-3">
    <div class="col-3">
      <img src="https://via.placeholder.com/150" alt="">
    </div>
    <div class="col-7">
      <h5><%= event.name %></h5>
      <p>from <%= event.start_date.strftime("%m/%d/%Y") %> to <%= event.end_date.strftime("%m/%d/%Y") %></p>
      <p class="card-text"><%= event.description %></p>
      <%= link_to "Book me", new_booking_path(guide_id: params[:guide_id], event_id: event.id), class: "btn btn-primary" %>
    </div>
  </div>
</div>
<% else %>
  <div class="event-section">
    <div class="row mb-3 mt-3">
      <div class="col-3">
        <img src="https://via.placeholder.com/150" alt="">
      </div>
      <div class="col-7">
        <h5><%= event.name %></h5>
        <p>from <%= event.start_date.strftime("%m/%d/%Y") %> to <%= event.end_date.strftime("%m/%d/%Y") %></p>
        <p class="card-text"><%= event.description %></p>
        <a href="#" class="btn btn-primary">Book event</a>
        <%= link_to "Choose a guide for this event", guides_path(event_id: event.id), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
